{
  "kind": "collectionType",
  "collectionName": "chapters",
  "info": {
    "singularName": "chapter",
    "pluralName": "chapters",
    "displayName": "Chapter",
    "description": "Chapters within units"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "overview": {
      "type": "text"
    },
    "units": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::unit.unit",
      "inversedBy": "chapters"
    },
    "modules": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::module.module",
      "mappedBy": "chapters"
    }
  }
}
